@import "../../node_modules/ionicons/dist/css/ionicons.css"
@import "../../node_modules/animate.css/animate.css"

timeTransitionMenu = 0.5s
calcDecalage = calc(100% - 45px)

body
  padding-top 44px  !important
  transition margin-left
  transition-duration timeTransitionMenu
  overflow hidden
  width 100%
  max-width 100%
  
  .side-bar-menu
    border-right 1px solid #ddd
    position absolute
    top 0
    bottom 0
    background-color white
    left 0
    z-index 1
    width 0
    overflow hidden
    transition width
    transition-duration timeTransitionMenu
    
  .bar-header
    transition left
    transition-duration timeTransitionMenu
    
  &.open-menu
    margin-left calcDecalage
    
    .bar-header
      left calcDecalage
      position initial
      margin-top -44px
      
    .side-bar-menu
      width calcDecalage
  // &:not([cz-shortcut-listen])
    



.talk-to-talk
  display none
  // bottom 50px
  border 1px solid #000
  width 100%
  // left 0px
  
.tab-item.input-micro
  max-width 100%
  flex-direction row
  display flex
  form
    flex 1
    display flex
    flex-direction row
    button
      height 100%
      
.bar-header
  .ion-close-round
    display none
.open-talk
  padding-top 0px !important
  .bar-header
    .ion-close-round
      display block
  [ui-view="footer"]
    height 100%
    position absolute
    width 100%
    .tabs
      background rgba(6, 5, 5, 0.91)
      color #FFF
      padding-top 44px
      display flex
      flex-direction column
      position relative
      height 100%
      justify-content space-between
  .tab-item
    flex 0
    min-height 70px
    min-width 100%
    padding-top 12px
  .talk-to-talk
    display block
    flex 1
  .input-micro
    min-height 40px !important
    flex 0